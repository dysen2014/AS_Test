<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_backgroup"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:weightSum="1536" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="300"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1811" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="60dp"
                android:src="@drawable/login_top_old"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="237" >

            <ImageButton
                android:id="@+id/main_loginout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/main_loginout" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="900"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="237"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1574"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="269" >

                <ImageButton
                    android:id="@+id/main_work"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="502"
                    android:background="@drawable/main_1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="542"
                    android:background="@drawable/main_2" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >
                </LinearLayout>

                <ImageButton
                    android:id="@+id/main_hallManage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="502"
                    android:background="@drawable/main_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="269" >

                <ImageButton
                    android:id="@+id/main_cusmanage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="502"
                    android:background="@drawable/main_4" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >
                </LinearLayout>

                <ImageButton
                    android:id="@+id/main_querycus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="707"
                    android:background="@drawable/main_5" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="332"
                    android:background="@drawable/main_6" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="269" >

                <ImageButton
                    android:id="@+id/main_querycard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="501"
                    android:background="@drawable/main_7" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >
                </LinearLayout>

                <ImageButton
                    android:id="@+id/main_saleManage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="349"
                    android:background="@drawable/main_8" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="333"
                    android:background="@drawable/main_9" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >
                </LinearLayout>

                <ImageButton
                    android:id="@+id/main_tools"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="332"
                    android:background="@drawable/main_10" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="237"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="320"
        android:gravity="bottom"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="30dp"
            android:src="@drawable/login_bottom"/>
    </LinearLayout>

</LinearLayout>