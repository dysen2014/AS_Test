<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >

    <LinearLayout 
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="visible">
	    <com.pactera.financialmanager.ui.commontool.TextViewMarquee
	        android:id="@+id/lvitem_info1"
	        android:layout_width="0dp"
	        android:layout_height="40dp"
	        android:layout_weight="2"
	        android:gravity="center"
	        android:text="客户姓名"
	        android:textColor="@color/workplacewordcolor"
	        android:singleLine="true"
	        android:paddingLeft="5dp"
	        android:textSize="17sp" />
	
	    <View
	        android:id="@+id/view1"
	        android:layout_width="0.6dp"
	        android:layout_height="match_parent"
	        android:background="@color/separateline" />
	
	    <TextView
	        android:id="@+id/lvitem_info2"
	        android:layout_width="0dp"
	        android:layout_height="40dp"
	        android:layout_weight="3"
	        android:gravity="center"
	        android:text="联络渠道"
	        android:textColor="@color/workplacewordcolor"
	        android:textSize="17sp" />
	
	    <View
	        android:id="@+id/view2"
	        android:layout_width="0.6dp"
	        android:layout_height="match_parent"
	        android:background="@color/separateline" />
	
	    <TextView
	        android:id="@+id/lvitem_info3"
	        android:layout_width="0dp"
	        android:layout_height="40dp"
	        android:layout_weight="3"
	        android:gravity="center"
	        android:text="服务类型"
	        android:textColor="@color/workplacewordcolor"
	        android:textSize="17sp" />
	
	    <View
	        android:id="@+id/view3"
	        android:layout_width="0.6dp"
	        android:layout_height="match_parent"
	        android:background="@color/separateline" />
	
	    <com.pactera.financialmanager.ui.commontool.TextViewMarquee
	        android:id="@+id/lvitem_info4"
	        android:layout_width="0dp"
	        android:layout_height="40dp"
	        android:layout_weight="3"
	        android:gravity="center"
	        android:text="服务标题"
	        android:singleLine="true"
	        android:paddingLeft="5dp"
	        android:textColor="@color/workplacewordcolor"
	        android:textSize="17sp" />
	
	    <View
			android:visibility="gone"
	        android:id="@+id/view4"
	        android:layout_width="0.6dp"
	        android:layout_height="match_parent"
	        android:background="@color/separateline" />
	
	    <TextView
			android:visibility="gone"
	        android:id="@+id/lvitem_info5"
	        android:layout_width="0dp"
	        android:layout_height="40dp"
	        android:layout_weight="3"
	        android:gravity="center"
	        android:text="执行状态"
	        android:textColor="@color/workplacewordcolor"
	        android:textSize="17sp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/red3" >
        <TextView
            android:id="@+id/item_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/del_icon_normal"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="删除"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>