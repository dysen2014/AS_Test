<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nowworkplacebg"
    android:orientation="vertical"
    android:weightSum="1536" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="107"
        android:orientation="horizontal" >

        <include layout="@layout/com_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1429"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="383"
            android:background="@drawable/nowworkplaceleftbg"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/signinrecord_edit_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:visibility="gone"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/signinrecord_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/queryByAnything"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/signinrecord_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/searchbg" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#55555555" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/lay_nodata"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/fm_nore"
                        android:text="抱歉，没有签到记录..."
                        android:textColor="@color/gray"
                        android:textSize="18sp" />
                </LinearLayout>

                <ListView
                    android:id="@+id/signinrecord_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" >
                </ListView>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1665" >
            <com.baidu.mapapi.map.MapView
                android:id="@+id/signinrecord_bmapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
            </com.baidu.mapapi.map.MapView>
            <RadioGroup
                android:id="@+id/singinrecord_rg"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="40dp"
                android:layout_height="270dp">
                <Button
                    android:id="@+id/onebutton"
                    android:layout_width="40dp"
                    android:background="@drawable/border"
                    android:layout_height="40dp"/>
                <Button
                    android:id="@+id/twobutton"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/border1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <Button
                    android:id="@+id/threebutton"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/border2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <Button
                    android:id="@+id/fourbutton"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/border3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <Button
                    android:id="@+id/fivebutton"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/border4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <Button
                    android:id="@+id/sixbutton"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/border5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <Button
                    android:id="@+id/sevenbutton"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/border6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
           </RadioGroup>

<LinearLayout
    android:id="@+id/record_query_maneger_ll"
    android:layout_alignParentRight="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/record_query_maneger"
                android:layout_width="35dp"
                android:layout_height="110dp"
                android:layout_marginTop="@dimen/dimens38dp"
                android:src="@drawable/signrecord"
               />

        <LinearLayout
            android:id="@+id/lay_board"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/nowworkplaceleftbg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                       >
                        <EditText
                            android:id="@+id/signinrecord_editText_manager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="模糊查询"
                            android:layout_gravity="center_vertical"
                            android:singleLine="true"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" >
                        <ImageView
                            android:id="@+id/signinrecord_img_manager"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/searchbg" />
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableTop="@drawable/fm_nore"
                            android:text="抱歉，没有签到记录..."
                            android:textColor="@color/gray"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/signinrecord_listView_manager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         >
                    </ListView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>