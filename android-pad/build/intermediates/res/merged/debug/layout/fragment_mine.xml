<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/common_title_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/mine_bg"/>

                <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:src="@drawable/mine_img"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mine_text_name"
                    style="@style/common_mine_text"
                    android:layout_height="36dp"
                    android:hint="张三\t4201231999××××1234"
                    android:textSize="36px"/>

                <LinearLayout
                    style="@style/common_mine_text"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="right|center_vertical"
                        android:text="所属营业部:"
                        android:textColor="#999999"
                        android:textSize="32px"
                        />

                    <TextView
                        android:id="@+id/mine_text_org"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:hint="×××支行"
                        android:textSize="32px"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/common_mine_text"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="right|center_vertical"
                        android:text="信贷系统ID:"
                        android:textColor="#999999"
                        android:textSize="32px"/>

                    <TextView
                        android:id="@+id/mine_text_system"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="3"
                        android:hint="信贷系统帐号BG123321"
                        android:textColor="#fbfbfb"
                        android:gravity="center_vertical"
                        android:textSize="32px"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/mine_txt_security"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="48dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/mine_security"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="安全中心"
                        android:textSize="32px"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_txt_suggest"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/mine_suggest"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="建议"
                        android:textSize="32px"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_txt_follow"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/mine_follow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="关注"
                        android:textSize="32px"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_txt_memo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/mine_memo"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="备忘录"
                        android:textSize="32px"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_txt_about"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/mine_about"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="关于"
                        android:textSize="32px"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_txt_quit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="48dp">

                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/mine_quit"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="退出登录"
                        android:textSize="32px"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>