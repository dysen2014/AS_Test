<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="125dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center">
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:orientation="horizontal">
			<ImageView 
			    android:id="@+id/iv_cm03_griditem"
			    android:layout_width="0dp"
			    android:layout_weight="1"
			    android:layout_height="match_parent"
			    android:paddingLeft="5dp"
			    android:paddingTop="15dp"
			    android:paddingBottom="15dp"
			    android:src="@drawable/icon_cm_prd2x"
			    android:layout_gravity="center"/>
			<LinearLayout 
			    android:layout_gravity="center"
			    android:layout_width="0dp"
			    android:layout_weight="2.8"
			    android:layout_height="match_parent"
			    android:orientation="vertical"
			    >
			    <TextView 
			        android:id="@+id/tv_cm03_prdname"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="1"
			        android:text=""
			        android:textColor="@color/black"
			        android:textStyle="bold"
			        android:gravity="center_vertical|left"
			        android:textSize="17sp"/>
			    <TextView 
			        android:id="@+id/tv_cm03_prdbegin"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="1"
			        android:gravity="center_vertical|left"
			        android:text=""
			        android:textSize="16sp"/>
			    <TextView 
			        android:id="@+id/tv_cm03_prdduration"
			        android:layout_width="match_parent"
			        android:gravity="center_vertical|left"
			        android:layout_height="0dp"
			        android:layout_weight="1"
			        android:text=""
			        android:textSize="16sp"/>
			    <TextView 
			        android:id="@+id/tv_cm03_prdrate"
			        android:layout_width="match_parent"
			        android:gravity="center_vertical|left"
			        android:layout_height="0dp"
			        android:layout_weight="1"
			        android:text=""
			        android:textSize="16sp"/>
			    <TextView 
			        android:id="@+id/tv_cm03_minnum"
			        android:layout_width="match_parent"
			        android:gravity="center_vertical|left"
			        android:layout_height="0dp"
			        android:layout_weight="1"
			        android:text=""
			        android:textSize="16sp"/>
		
			</LinearLayout>
			 <LinearLayout 
			     android:layout_width="1dp"
			     android:layout_height="match_parent"
			     android:background="@color/grey">
		     
		 	</LinearLayout>
	 </LinearLayout>
	 <LinearLayout 
	     android:layout_width="match_parent"
	     android:layout_height="1dp"
	     android:background="@color/grey">
	 </LinearLayout>
 </LinearLayout>

