<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bookbuildingdialogfragmentbg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/dialogtopbg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableLeft="@drawable/com_edit"
            android:drawablePadding="5dp"
            android:text="编辑"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:visibility="invisible"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="780"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_weight="1"
                android:background="@drawable/bookbuildingbg"
                android:divider="@drawable/gray_divider"
                android:orientation="vertical"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="@color/lvtopbg"
                        android:gravity="center_vertical|right"
                        android:text="贷款方式："
                        android:textColor="#4d4d4d"
                        android:textSize="16.5sp"></TextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#d4d4d4" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_kind"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="35dp"
                            android:background="@drawable/spinnerbg"
                            android:clickable="true"
                            android:editable="false"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="@color/lvtopbg"
                        android:gravity="center_vertical|right"
                        android:text="金额(元)："
                        android:textColor="#4d4d4d"
                        android:textSize="16.5sp"></TextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#d4d4d4" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_amount"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="36dp"
                            android:paddingLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/qy_edit_bg"
                            android:inputType="numberDecimal"
                            android:singleLine="true"
                            android:textColor="#4d4d4d"
                            android:textSize="16.5dp"></EditText>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="@color/lvtopbg"
                        android:gravity="center_vertical|right"
                        android:text="状态："
                        android:textColor="#4d4d4d"
                        android:textSize="16.5sp"></TextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#d4d4d4" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_status"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="35dp"
                            android:background="@drawable/spinnerbg"
                            android:clickable="true"
                            android:editable="false"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="@color/lvtopbg"
                        android:gravity="center_vertical|right"
                        android:text="预约时间："
                        android:textColor="#4d4d4d"
                        android:textSize="16.5sp"></TextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#d4d4d4" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_occurtime"
                            android:layout_width="220dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/bookbuilding_datebtnbg"
                            android:gravity="center"
                            android:text=" "
                            android:textColor="@color/gray"
                            android:textSize="16.5sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="@color/lvtopbg"
                        android:gravity="center_vertical|right"
                        android:text="用途："
                        android:textColor="#4d4d4d"
                        android:textSize="16.5sp"></TextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#d4d4d4" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_purpose"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="35dp"
                            android:background="@drawable/spinnerbg"
                            android:clickable="true"
                            android:editable="false"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="@color/lvtopbg"
                        android:gravity="center_vertical|right"
                        android:text="周转期限(月)："
                        android:textColor="#4d4d4d"
                        android:textSize="16.5sp"></TextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#d4d4d4" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_turnover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="36dp"
                            android:background="@drawable/qy_edit_bg"
                            android:paddingLeft="4dp"
                            android:singleLine="true"
                            android:textColor="#4d4d4d"
                            android:textSize="16.5dp"></EditText>
                    </LinearLayout>
                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:orientation="horizontal">-->

                    <!--<TextView-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="7"-->
                        <!--android:background="@color/lvtopbg"-->
                        <!--android:gravity="center_vertical|right"-->
                        <!--android:text="提醒日期："-->
                        <!--android:textColor="#4d4d4d"-->
                        <!--android:textSize="16.5sp"></TextView>-->

                    <!--<View-->
                        <!--android:layout_width="0.5dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:background="#d4d4d4" />-->

                    <!--<LinearLayout-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="16">-->

                        <!--<TextView-->
                            <!--android:id="@+id/tv_remindtime"-->
                            <!--android:layout_width="220dp"-->
                            <!--android:layout_height="36dp"-->
                            <!--android:layout_gravity="center_vertical"-->
                            <!--android:layout_marginLeft="20dp"-->
                            <!--android:background="@drawable/bookbuilding_datebtnbg"-->
                            <!--android:gravity="center"-->
                            <!--android:text="请选择日期"-->
                            <!--android:textColor="@color/gray"-->
                            <!--android:textSize="16.5sp" />-->
                    <!--</LinearLayout>-->
                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="@color/lvtopbg"
                        android:gravity="center_vertical|right"
                        android:text="创建人："
                        android:textColor="#4d4d4d"
                        android:textSize="16.5sp"></TextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#d4d4d4" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16">

                        <TextView
                            android:id="@+id/tv_recorduser"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="36dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="4dp"
                            android:singleLine="true"
                            android:text="--"
                            android:textColor="#4d4d4d"
                            android:textSize="16.5dp" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="@color/lvtopbg"
                        android:gravity="center_vertical|right"
                        android:text="创建时间："
                        android:textColor="#4d4d4d"
                        android:textSize="16.5sp"></TextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#d4d4d4" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16">

                        <TextView
                            android:id="@+id/tv_recordtime"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="36dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="4dp"
                            android:singleLine="true"
                            android:textColor="#4d4d4d"
                            android:textSize="16.5dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="110dp"
                    android:layout_height="41dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/bookbuildingbtnbg"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_close"
                    android:layout_width="110dp"
                    android:layout_height="41dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/bookbuildingbtnbg"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>