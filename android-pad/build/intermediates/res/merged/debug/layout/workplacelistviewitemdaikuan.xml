<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lvitem_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="客户姓名"
            android:textColor="@color/workplacewordcolor"
            android:textSize="14sp" />

        <com.pactera.financialmanager.ui.commontool.TextViewMarquee
            android:id="@+id/lvitem_info2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3.5"
            android:gravity="center"
            android:singleLine="true"
            android:text="存款帐号"
            android:textColor="@color/workplacewordcolor"
            android:textSize="14sp" />

        <com.pactera.financialmanager.ui.commontool.TextViewMarquee
            android:id="@+id/lvitem_info3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="业务品种"
            android:singleLine="true"
            android:textColor="@color/workplacewordcolor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lvitem_info4"
            android:layout_width="0dp"
            android:layout_height="40dp"
        	android:layout_weight="1.5"
            android:gravity="center"
            android:text="贷款利率"
            android:textColor="@color/workplacewordcolor"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/lvitem_info5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="到期金额"
            android:textColor="@color/workplacewordcolor"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/lvitem_info6"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="发放日期"
            android:textColor="@color/workplacewordcolor"
            android:textSize="14sp" />
        
        
        <TextView
            android:id="@+id/lvitem_info7"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="到期日期"
            android:textColor="@color/workplacewordcolor"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/lvitem_info8"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="第一责任人"
            android:textColor="@color/workplacewordcolor"
            android:textSize="14sp" />
        
		<com.pactera.financialmanager.ui.commontool.TextViewMarquee
            android:id="@+id/lvitem_info9"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:gravity="center"
            android:singleLine="true"
            android:text="管理机构"
            android:textColor="@color/workplacewordcolor"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>