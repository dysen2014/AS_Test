<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="swipelistviewstyle">    
        <attr name="right_width" format="dimension"></attr>
    </declare-styleable>
    
    <declare-styleable name="PullToRefresh">
        <attr name="adapterViewBackground" format="reference|color" />
        <attr name="headerBackground" format="reference|color" />
        <attr name="headerTextColor" format="color" />
        <attr name="mode">
            <flag name="pullDownFromTop" value="0x1" />
            <flag name="pullUpFromBottom" value="0x2" />
            <flag name="both" value="0x3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>

    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>
    
     <declare-styleable name="SwipeLayout">
        <attr name="drag_edge" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="top" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
        <attr name="show_mode" format="enum">
            <enum name="lay_down" value="0"/>
            <enum name="pull_out" value="1"/>
        </attr>
    </declare-styleable>

    <!--item attrs-->
    <declare-styleable name="ItemAttrs">

        <attr name="text_size" format="integer"/>
        <attr name="text_color" format="color"/>
        <attr name="icon_margin_left" format="integer"/>
        <attr name="icon_text_margin" format="integer"/>
        <attr name="margin_right" format="integer"/>
        <attr name="item_height" format="integer"/>
        <attr name="line_color" format="color"/>

        <attr name="right_text_size" format="integer"/>
        <attr name="right_text_color" format="color"/>
        <attr name="right_text_margin" format="integer"/>
    </declare-styleable>

    <!--dialog-->
    <declare-styleable name="Dialog">
        <attr name="DialogTitleAppearance" format="reference" />
        <attr name="DialogTitleText" format="reference|string" />
        <attr name="DialogSpotColor" format="reference|color"/>
        <attr name="DialogSpotCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomFont">
        <attr name="fontFamily" format="string" />
    </declare-styleable>

    <declare-styleable name="ExpandingItem">
        <attr name="item_layout" format="reference"/>
        <attr name="sub_item_layout" format="reference"/>
        <attr name="separator_layout" format="reference"/>
        <attr name="indicator_size" format="dimension"/>
        <attr name="indicator_margin_left" format="dimension"/>
        <attr name="indicator_margin_right" format="dimension"/>
        <attr name="show_indicator" format="boolean"/>
        <attr name="show_animation" format="boolean"/>
        <attr name="start_collapsed" format="boolean"/>
        <attr name="animation_duration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="UberProgressView">
        <attr name="stationary_circle_radius" format="dimension" />
        <attr name="orbiting_circle_radius" format="dimension" />
        <attr name="stationary_circle_color" format="color" />
        <attr name="fading_circle_color" format="color" />
        <attr name="orbiting_circle_color" format="color" />
        <attr name="animation_time" format="integer" />
        <attr name="direction" format="enum">
            <enum name="clockwise" value="0"/>
            <enum name="counterclockwise" value="1"/>
        </attr>
    </declare-styleable>

</resources>