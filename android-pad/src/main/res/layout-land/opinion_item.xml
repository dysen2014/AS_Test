<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginBottom="16dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_name"
        android:gravity="center_vertical"
        android:background="@drawable/shape_item_bg_white">

        <TextView
            android:id="@+id/data_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/data_img"
            android:background="@drawable/ic_left"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            style="@style/common_lay_txt"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/data_0"
                style="@style/common_text_left"/>

            <TextView
                android:id="@+id/data_1"
                style="@style/common_text_right"/>
        </LinearLayout>

        <LinearLayout
            style="@style/common_lay_txt"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/data_2"
                style="@style/common_text_left"/>

            <TextView
                android:id="@+id/data_3"
                style="@style/common_text_right"/>
        </LinearLayout>

        <LinearLayout
            style="@style/common_lay_txt"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/data_4"
                style="@style/common_text_left"/>

            <TextView
                android:id="@+id/data_5"
                style="@style/common_text_right"/>
        </LinearLayout>

        <LinearLayout
            style="@style/common_lay_txt"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/data_6"
                style="@style/common_text_left"/>

            <TextView
                android:id="@+id/data_7"
                style="@style/common_text_right"/>
        </LinearLayout>

        <LinearLayout
            style="@style/common_lay_txt"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/data_8"
                style="@style/common_text_left"/>

            <TextView
                android:id="@+id/data_9"
                style="@style/common_text_right"/>
        </LinearLayout>

        <LinearLayout
            style="@style/common_lay_txt"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/data_10"
                style="@style/common_text_left"/>

            <TextView
                android:id="@+id/data_11"
                style="@style/common_text_right"/>
        </LinearLayout>

        <LinearLayout
            style="@style/common_lay_txt"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/data_12"
                style="@style/common_text_left"/>

            <TextView
                android:id="@+id/data_13"
                style="@style/common_text_right"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>