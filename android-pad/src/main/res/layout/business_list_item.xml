<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:orientation="horizontal"
	>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"

		android:gravity="center"
		>

		<TextView
			android:id="@+id/picture"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_margin="16dp"
			android:background="@mipmap/u800"
			/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="96dp"
		android:layout_margin="16dp"
		android:orientation="vertical"
		>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center_vertical"
			>

			<TextView
				android:id="@+id/CustomerName"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="left"
				android:text="@string/customerName"
				android:textSize="20dp"
				/>

			<TextView
				android:id="@+id/businessType"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:textSize="20dp"
				/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
		    android:orientation="horizontal"
			>
			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				>

				<TextView
					android:id="@+id/BusinessSum_left"
					android:layout_width="wrap_content"
					android:layout_height="20dp"
					android:gravity="center"
					android:text="贷款金额"
					/>

				<TextView
					android:id="@+id/BusinessSum"
					android:layout_width="match_parent"
					android:layout_height="20dp"
					android:layout_toEndOf="@+id/BusinessSum_left"
					android:layout_toRightOf="@+id/BusinessSum_left"
					android:gravity="left"
					/>

			</LinearLayout>
			<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			>

			<TextView
				android:id="@+id/Balance_left"
				android:layout_width="wrap_content"
				android:layout_height="20dp"
				android:gravity="center"
				android:text="贷款余额"
				/>

			<TextView
				android:id="@+id/Balance"
				android:layout_width="match_parent"
				android:layout_height="20dp"
				android:layout_toEndOf="@+id/Balance_left"
				android:layout_toRightOf="@+id/Balance_left"
				android:gravity="left"
				/>
		</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="horizontal"
			>
			<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				>

				<TextView
					android:id="@+id/OverDueBalance_left"
					android:layout_width="wrap_content"
					android:layout_height="20dp"
					android:gravity="center"
					android:text="逾期金额"
					/>

				<TextView
					android:id="@+id/OverDueBalance"
					android:layout_width="match_parent"
					android:layout_height="20dp"
					android:layout_toEndOf="@+id/OverDueBalance_left"
					android:layout_toRightOf="@+id/OverDueBalance_left"
					android:gravity="left"
					/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				>

				<TextView
					android:id="@+id/InterestBalance_left"
					android:layout_width="wrap_content"
					android:layout_height="20dp"
					android:gravity="center"
					android:text="欠息金额"
					/>

				<TextView
					android:id="@+id/InterestBalance"
					android:layout_width="match_parent"
					android:layout_height="20dp"
					android:layout_toEndOf="@+id/InterestBalance_left"
					android:layout_toRightOf="@+id/InterestBalance_left"
					android:gravity="left"
					/>
			</LinearLayout>
		</LinearLayout>

	</LinearLayout>

</LinearLayout>
