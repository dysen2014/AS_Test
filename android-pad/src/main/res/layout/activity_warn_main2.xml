<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pactera.financialmanager.credit.main.warn.WarnMainFragment">

    <include
        layout="@layout/common_title_layout"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/common_pull_loadmore_layout"/>
            </LinearLayout>

            <com.dysen.pullloadmore_recyclerview.PullLoadMoreRecyclerView
                android:id="@+id/pull_load_more1"
                android:layout_width="match_parent"
                android:layout_height="64dp"/>

            <com.dysen.pullloadmore_recyclerview.PullLoadMoreRecyclerView
                android:id="@+id/pull_load_more2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_weight="2"/>

            <com.dysen.pullloadmore_recyclerview.PullLoadMoreRecyclerView
                android:id="@+id/pull_load_more3"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="48dp"/>

            <com.dysen.pullloadmore_recyclerview.PullLoadMoreRecyclerView
                android:id="@+id/pull_load_more4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"/>

        </LinearLayout>

</LinearLayout>
