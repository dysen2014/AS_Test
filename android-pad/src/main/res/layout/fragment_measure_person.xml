<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg_main_nologo"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人理财客户风险评估问卷"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重要提示:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    以下11个问题将根据您的财务状况、投资经验、投资风格、投资目的、风险偏好和风险承受能力等对您进行风险评估，我行将根据评估结果为您更好的配置资产。请您认真作答，感谢您的配合！我行将不对此份问卷准确性以及咨询完整性负责。您在此问卷上所填写的资料本行将予以保密。（每个问题请选择唯一选项，不可多选）"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="一、财务状况"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.您的年龄是？"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/measure_person_rg_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/measure_person_rb_1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" A.18-25"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" B.25-50"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_1_3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" C.51-60"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_1_4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" D.60-65"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_1_5"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" E.高于65岁"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.您的家庭年收入为（折合人民币）？（不包括自用住宅和私营企业等实业投资，包括储蓄、保险、金融投资、实物投资，并需扣除未结清贷款、信用卡账单等债务）"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/measure_person_rg_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/measure_person_rb_2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" A.15万元以下"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" B.15万元（不含）-50万元（含）"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_2_3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" C.50万元（不含）-100万元（含）"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_2_4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" D.100万元（不含）-1000万元（含）"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_2_5"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text="E.1000万元（不含）以上"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. 在您的家庭总资产净值中，可用于金融投资（储蓄存款除外）的比例为？"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/measure_person_rg_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/measure_person_rb_3_1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" A.小于10% "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_3_2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" B.10%至25% "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_3_3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" C.25%至50% "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_3_4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" D.大于50%"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="二、投资经验（任一项选A客户均视为无投资经验客户）"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.以下哪项最能说明您的投资经验？"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/measure_person_rg_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/measure_person_rb_4_1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" A.除存款、国债外，我几乎不投资其他金融产品 "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_4_2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" B.大部分投资于存款、国债等，较少投资于股票、基金等风险产品"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_4_3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" C.资产均衡地分布于存款、国债、银行理财产品、信托产品、股票、基金等"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_4_4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" D.大部分投资于股票、基金、外汇等高风险产品，较少投资于存款、国债 "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.您有多少年投资股票、基金、外汇、金融衍生产品等风险投资品的经验？"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/measure_person_rg_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/measure_person_rb_5_1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" A.没有经验 "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_5_2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" B.有经验，但少于2年"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_5_3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" C.2至5年 "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_5_4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" D.5至8年 "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_5_5"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" E.8年以上"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6．以下哪项描述最符合您的投资态度？"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/measure_person_rg_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/measure_person_rb_6_1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" A.厌恶风险，不希望本金损失，希望获得稳定回报 "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_6_2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" B.保守投资，不希望本金损失，愿意承担一定幅度的收益波动 "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_6_3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" C.寻求资金的较高收益和成长性，愿意为此承担有限本金损失 "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_6_4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" D.希望赚取高回报，愿意为此承担较大本金损失 "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="三、投资风格"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.本金100万元，不提供保本承诺的情况下，您会选择哪一种投资机会？"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/measure_person_rg_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/measure_person_rb_7_1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" A.有100%的机会赢取1000元现金，并保证归还 "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_7_2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" B.有50%的机会赢取5万元现金，并有较高可能性归还本金  "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_7_3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" C.有25%的机会赢取50万元现金，并有一定得可能性损失本金  "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_7_4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" D.有10%的机会赢取100万元现金，并有价高可能性损失本金"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8. 投资于理财、股票、基金等金融投资品（不含存款和国债）时，您可接受的最长投资期限是多久？"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/measure_person_rg_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/measure_person_rb_8_1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" A.1年以下 "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_8_2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" B.1－3年"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_8_3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" C.3—5年 "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_8_4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" D.5年以上"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9、您的投资目的是？"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/measure_person_rg_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/measure_person_rb_9_1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:text=" A.资产保值"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_9_2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/radiobutton"
                        android:text=" B.资产稳健增长"
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/measure_person_rb_9_3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:button="@drawable/radiobutton"
                        android:layout_marginLeft="50dp"
                        android:text=" C.资产迅速增值 "
                        android:textColor="#4d4d4d"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="三、投资风格"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.您的投资出现何种程度的波动时，您会呈现明显的焦虑？"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/measure_person_rg_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/measure_person_rb_10_1"
