<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.baidu.mapapi.map.MapView
            android:id="@+id/signin_bmapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" >
        </com.baidu.mapapi.map.MapView>

        <Button
            android:id="@+id/fm_mysignin_btn_loc"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="83dp"
            android:layout_marginTop="39dp"
            android:background="@drawable/map_location" />

        <Button
            android:id="@+id/fm_mysignin_btn_del"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/fm_mysignin_btn_loc"
            android:layout_below="@+id/fm_mysignin_btn_loc"
            android:layout_marginTop="22dp"
            android:background="@drawable/map_delete" />

    </RelativeLayout>

</FrameLayout>