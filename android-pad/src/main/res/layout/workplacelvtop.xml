<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_workplaceitem"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_workplaceitem1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:text="客户姓名"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/tv_workplaceitem2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="存款帐号"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/tv_workplaceitem3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="存款名称"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/tv_workplaceitem4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:text="到期金额"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/tv_workplaceitem5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="到期日期"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

</LinearLayout>