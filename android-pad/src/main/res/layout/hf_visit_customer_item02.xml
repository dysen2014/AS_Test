<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="56dip"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/hf_vc_item_num"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:layout_weight="40"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="17.5sp"
        android:textColor="@color/workplacewordcolor" >
    </TextView>

    <LinearLayout 
        android:id="@+id/ll_item_otherline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="42"
        android:gravity="center"
        >
        <ImageView 
            android:id="@+id/img_item_otherline"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:scaleType="centerInside"
            android:src="@drawable/otherlineno"
            />
    </LinearLayout>

   <TextView
        android:id="@+id/hf_vc_item_waittime"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:layout_weight="43"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="17.5sp"
        android:textColor="@color/workplacewordcolor" >
    </TextView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:layout_weight="39"
         >
        <Button
            android:id="@+id/hf_vc_item_name"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:textColor="@color/workplacewordcolor"
        	android:textSize="17.5sp"
            />

        <ImageView
            android:id="@+id/hall_birthdayicon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/hf_vc_item_name"
            android:layout_marginLeft="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/birthdayicon"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/hf_vc_item_sex"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:layout_weight="41"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="17.5sp"
        android:textColor="@color/workplacewordcolor" >
    </TextView>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:layout_weight="42"
            android:gravity="center"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textSize="17sp">
        <ImageView
                android:id="@+id/s1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/score"
                />
        <ImageView
                android:id="@+id/s2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/score"

                />
        <ImageView
                android:id="@+id/s3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/score"

                />
        <ImageView
                android:id="@+id/s4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/score"

                />
        <ImageView
                android:id="@+id/s5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/score"

                />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:layout_weight="40"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="17sp" >
        <ImageView
            android:id="@+id/hf_vc_item_customerlevel"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:scaleType="centerInside"
            />
    </LinearLayout>
 
    <TextView
        android:id="@+id/hf_vc_item_manager"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:layout_weight="40"
        android:gravity="center"
        android:scaleType="center"
        android:textSize="17.5sp"
        android:textColor="@color/workplacewordcolor"/>

</LinearLayout>