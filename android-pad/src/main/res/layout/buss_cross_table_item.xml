<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:scrollbars="none"
        android:layout_height="40dp">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/group_radio_buss">

            <RadioButton
                android:id="@+id/buss_item_00"
                style="@style/radio_btn_item"
                android:checked="true"
                />

            <RadioButton
                style="@style/radio_btn_item"
                android:id="@+id/buss_item_01"/>

            <RadioButton
                style="@style/radio_btn_item"
                android:id="@+id/buss_item_02"/>

            <RadioButton
                style="@style/radio_btn_item"
                android:id="@+id/buss_item_03"/>

            <RadioButton
                style="@style/radio_btn_item"
                android:id="@+id/buss_item_04"/>

            <RadioButton
                style="@style/radio_btn_item"
                android:id="@+id/buss_item_05"/>

            <RadioButton
                style="@style/radio_btn_item"
                android:id="@+id/buss_item_06"/>

        </RadioGroup>
    </HorizontalScrollView>

</LinearLayout>