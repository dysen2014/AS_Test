<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bookbuildingdialogfragmentbg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/dialogtopbg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableLeft="@drawable/com_edit"
            android:drawablePadding="5dp"
            android:text="编辑"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:visibility="invisible"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="780"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@drawable/bookbuildingbg"
                android:divider="@drawable/gray_divider"
                android:orientation="vertical"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="@color/lvtopbg"
                        android:gravity="center_vertical|right"
                        android:text="产品种类："
                        android:textColor="#4d4d4d"
                        android:textSize="16.5sp"></TextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#d4d4d4" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"

                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_catogry"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:hint=" "
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="35dp"
                            android:background="@drawable/spinnerbg"
                            android:clickable="true"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="@color/lvtopbg"
                        android:gravity="center_vertical|right"
                        android:text="预约时间："
                        android:textColor="#4d4d4d"
                        android:textSize="16.5sp"></TextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#d4d4d4" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_choosetime"
                            android:layout_width="220dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/bookbuilding_datebtnbg"
                            android:gravity="center"

                            android:hint=" "
                            android:textColor="@color/gray"
                            android:textSize="16.5sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="@color/lvtopbg"
                        android:gravity="center_vertical|right"
                        android:text="内容描述："
                        android:textColor="#4d4d4d"
                        android:textSize="16.5sp"></TextView>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#d4d4d4" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="16">

                        <EditText
                            android:id="@+id/et_descripsms"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"

                            android:layout_marginRight="36dp"
                            android:hint=" "
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="20dp"
                            android:singleLine="true"
                            android:textColor="#4d4d4d"
                            android:textSize="16.5dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="110dp"
                    android:layout_height="41dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/bookbuildingbtnbg"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_close"
                    android:layout_width="110dp"
                    android:layout_height="41dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/bookbuildingbtnbg"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>