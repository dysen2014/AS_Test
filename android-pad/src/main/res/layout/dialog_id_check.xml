<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/login_backgroup"
              android:orientation="vertical">

    <TextView
            android:id="@+id/queue_code"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"

            android:text="证件核验"
            android:textColor="@color/black"
            android:textSize="25sp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">


        <LinearLayout android:layout_width="wrap_content" android:layout_height="50dp" android:orientation="horizontal">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="23sp"
                      android:textColor="@color/black" android:text="身份证："/>
            <EditText android:id="@+id/edit_id" android:layout_width="400dp" android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content" android:layout_height="50dp" android:orientation="horizontal">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="23sp"
                      android:textColor="@color/black" android:text="    姓名："/>
            <EditText android:id="@+id/edit_name" android:layout_width="400dp" android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="50dp" android:orientation="horizontal">
            <RadioGroup android:id="@+id/rgroup_apply_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                <RadioButton android:id="@+id/radio_master" android:text="申请主卡" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black" />
                <RadioButton android:id="@+id/radio_supplementary" android:text="申请附卡" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black" />
                <RadioButton android:id="@+id/radio_both" android:text="申请主附卡" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black" />

            </RadioGroup>
        </LinearLayout>

        <TextView android:id="@+id/txt_errmsg" android:layout_width="wrap_content" android:layout_height="50dp"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_check"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/qy_btn_red_check"
                android:gravity="center"
                android:text="核验"
                android:textColor="@color/white"
                android:textSize="23sp"/>

        <LinearLayout android:layout_width="35dp" android:layout_height="35dp"/>

        <Button
                android:id="@+id/btn_cancel"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/qy_btn_red_check"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="23sp"/>

    </LinearLayout>
</LinearLayout>