<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="121dp"
    android:background="@color/white"
    android:minHeight="120dp"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:orientation="horizontal" >
        <TextView
        android:id="@+id/customer_marketing_info_listview_item01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="12"
        android:gravity="center"
        android:text="@string/tv_optimal_recommend_products_no"
        android:textColor="@color/black" />


    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/gray" >
    </LinearLayout>

    <TextView
        android:id="@+id/customer_marketing_info_listview_item02"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="9"
        android:gravity="center"
        android:text="@string/tv_optimal_recommend_products_name"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/gray" >
    </LinearLayout>

    <TextView
        android:id="@+id/customer_marketing_info_listview_item03"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="9"
        android:gravity="center"
        android:maxLines="6"
        android:text="@string/tv_optimal_recommend_products_introduction"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/gray" >
    </LinearLayout>

    <TextView
        android:id="@+id/customer_marketing_info_listview_item04"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:maxLines="6"
        android:layout_weight="9"
        android:textColor="@color/black" />
    </LinearLayout>

    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/gray"/>

</LinearLayout>