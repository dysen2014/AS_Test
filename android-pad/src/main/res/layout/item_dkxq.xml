<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_left"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/separateline1" />

        <TextView
            android:id="@+id/lvitem_info1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/column_name_text_size"
            android:text="贷款方式"
            android:textColor="@color/workplacewordcolor" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/separateline1" />

        <TextView
            android:id="@+id/lvitem_info2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/column_name_text_size"
            android:text="金额"
            android:textColor="@color/workplacewordcolor" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/separateline1" />

        <TextView
            android:id="@+id/lvitem_info3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/column_name_text_size"
            android:text="预约时间"
            android:textColor="@color/workplacewordcolor" />

        <View
            android:id="@+id/view3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/separateline1" />

        <TextView
            android:id="@+id/lvitem_info4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用途"
            android:textSize="@dimen/column_name_text_size"
            android:textColor="@color/workplacewordcolor" />

        <View
            android:id="@+id/view4"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/separateline1" />

        <TextView
            android:id="@+id/lvitem_info5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="@dimen/column_name_text_size"
            android:text="周转期限\n（月）"
            android:textColor="@color/workplacewordcolor" />

        <!--<View-->
            <!--android:id="@+id/view5"-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/separateline1" />-->

        <!--<TextView-->
            <!--android:id="@+id/lvitem_info6"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:textSize="@dimen/column_name_text_size"-->
            <!--android:gravity="center"-->
            <!--android:text="提醒时间"-->
            <!--android:textColor="@color/workplacewordcolor" />-->

        <View
            android:id="@+id/view6"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/separateline1" />

        <TextView
            android:id="@+id/lvitem_info7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="状态"
            android:textSize="@dimen/column_name_text_size"
            android:textColor="@color/workplacewordcolor" />

        <View
            android:id="@+id/view7"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/separateline1" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/red3">

        <TextView
            android:id="@+id/item_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/del_icon_normal"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="删除"
            android:textSize="@dimen/column_name_text_size"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>