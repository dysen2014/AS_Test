<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_workplaceitem"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/lvitem_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:text="客户姓名"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:id="@+id/line1"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/lvitem_info2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="true"
        android:text="贷款帐号"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:id="@+id/line2"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/lvitem_info3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="true"
        android:text="产品名称"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:id="@+id/line3"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/lvitem_info4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="逾期金额"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:id="@+id/line4"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/lvitem_info5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="逾期日期"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:id="@+id/line5"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/lvitem_info6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="主办机构"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />
</LinearLayout>