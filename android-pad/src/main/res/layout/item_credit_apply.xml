<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_myscusitem"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:orientation="horizontal">

    <CheckBox android:id="@+id/idx" android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp"
              android:gravity="center_vertical"/>


    <View
            android:id="@+id/view6"
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/separateline"/>


    <LinearLayout android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:gravity="center">

        <com.pactera.financialmanager.ui.commontool.TextViewMarquee
                android:id="@+id/txt_finished"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="状态"
                android:singleLine="true"
                android:textColor="@color/workplacewordcolor"
                android:textSize="13sp"/>

        <ImageView
            android:layout_width="20dp" android:layout_height="20dp"
                android:background="@drawable/otherlineover"
                android:visibility="gone"
                />
    </LinearLayout>




    <View
            android:id="@+id/view1"
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/separateline"/>

    <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="客户姓名"
            android:textColor="@color/workplacewordcolor"
            android:textSize="13sp"/>

    <View
            android:id="@+id/view2"
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/separateline"/>

    <com.pactera.financialmanager.ui.commontool.TextViewMarquee
            android:id="@+id/txt_id_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="证件号码"
            android:textColor="@color/workplacewordcolor"
            android:textSize="13sp"/>

    <View
            android:id="@+id/view3"
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/separateline"/>

    <com.pactera.financialmanager.ui.commontool.TextViewMarquee
            android:id="@+id/txt_apply_type"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="申请类型"
            android:textColor="@color/workplacewordcolor"
            android:textSize="13sp"/>

    <View
            android:id="@+id/view4"
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/separateline"/>

    <com.pactera.financialmanager.ui.commontool.TextViewMarquee
            android:id="@+id/txt_product_type"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="产品类型"
            android:textColor="@color/workplacewordcolor"
            android:textSize="13sp"/>

    <View
            android:id="@+id/view5"
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/separateline"/>

    <com.pactera.financialmanager.ui.commontool.TextViewMarquee
            android:id="@+id/txt_last_update_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:gravity="center"
            android:singleLine="true"
            android:text="修改时间"
            android:textColor="@color/workplacewordcolor"
            android:textSize="13sp"/>


    <View
            android:id="@+id/view7"
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/separateline"/>



    <LinearLayout android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="2" android:gravity="center">

        <com.pactera.financialmanager.ui.commontool.TextViewMarquee
                android:id="@+id/txt_operate"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="操作"
                android:singleLine="true"
                android:textColor="@color/workplacewordcolor"
                android:textSize="13sp"/>

        <Button android:id="@+id/btn_edit"
                android:layout_width="20dp" android:layout_height="20dp"
                android:background="@drawable/signinrecord"
                android:visibility="gone"
                />
        <LinearLayout android:layout_width="20dp" android:layout_height="0dp"></LinearLayout>

        <Button android:id="@+id/btn_del"
                android:layout_width="20dp" android:layout_height="20dp"
                android:background="@drawable/unsign2x"
                android:visibility="gone"
                />

    </LinearLayout>


</LinearLayout>