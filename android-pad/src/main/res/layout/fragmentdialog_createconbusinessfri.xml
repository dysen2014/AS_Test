<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bookbuildingdialogfragmentbg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/dialogtopbg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="创建其他关联方情况"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <include layout="@layout/checkboxlayout" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="75"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="780"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="390dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bookbuildingbg"
                        android:divider="@drawable/gray_divider"
                        android:orientation="vertical"
                        android:paddingBottom="0.7dp"
                        android:paddingLeft="0.7dp"
                        android:paddingTop="0.7dp"
                        android:showDividers="middle">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:background="@color/lvtopbg"
                                android:gravity="center_vertical|right"
                                android:text="关联方名称："
                                android:textColor="#4d4d4d"
                                android:textSize="16.5sp"></TextView>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#d4d4d4" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="16"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/et_dialog_otherrelation_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:gravity="center_vertical|left"
                                    android:paddingLeft="4dp"
                                    android:singleLine="true"
                                    android:textColor="#4d4d4d"
                                    android:textSize="16.5dp"></EditText>
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:background="@color/lvtopbg"
                                android:gravity="center_vertical|right"
                                android:text="关联方证件类型："
                                android:textColor="#4d4d4d"
                                android:textSize="15.5sp"></TextView>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#d4d4d4" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="16">

                                <EditText
                                    android:id="@+id/et_dialog_otherrelation_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="35dp"
                                    android:background="@drawable/spinnerbg"
                                    android:clickable="true"
                                    android:editable="false"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:background="@color/lvtopbg"
                                android:gravity="center_vertical|right"
                                android:text="关联方证件号码："
                                android:textColor="#4d4d4d"
                                android:textSize="15.5sp"></TextView>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#d4d4d4" />

                            <EditText
                                android:id="@+id/et_dialog_otherrelation_3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="16"
                                android:background="@null"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textColor="#4d4d4d"
                                android:textSize="16.5dp"></EditText>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:background="@color/lvtopbg"
                                android:gravity="center_vertical|right"
                                android:text="关联关系："
                                android:textColor="#4d4d4d"
                                android:textSize="16.5sp"></TextView>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#d4d4d4" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="16">

                                <EditText
                                    android:id="@+id/et_dialog_otherrelation_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="35dp"
                                    android:background="@drawable/spinnerbg"
                                    android:clickable="true"
                                    android:editable="false"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:background="@color/lvtopbg"
                                android:gravity="center_vertical|right"
                                android:text="法人代表名称："
                                android:textColor="#4d4d4d"
                                android:textSize="16.5sp"></TextView>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#d4d4d4" />

                            <EditText
                                android:id="@+id/et_dialog_otherrelation_5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="16"
                                android:background="@null"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textColor="#4d4d4d"
                                android:textSize="16.5dp"></EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:background="@color/lvtopbg"
                                android:gravity="center_vertical|right"
                                android:text="结算方式："
                                android:textColor="#4d4d4d"
                                android:textSize="16.5sp"></TextView>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#d4d4d4" />

                            <EditText
                                android:id="@+id/et_dialog_otherrelation_6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="16"
                                android:background="@null"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textColor="#4d4d4d"
                                android:textSize="16.5dp"></EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:background="@color/lvtopbg"
                                android:gravity="center_vertical|right"
                                android:text="备注："
                                android:textColor="#4d4d4d"
                                android:textSize="16.5sp"></TextView>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#d4d4d4" />

                            <EditText
                                android:id="@+id/et_dialog_otherrelation_7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="16"
                                android:background="@null"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textColor="#4d4d4d"
                                android:textSize="16.5dp"></EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:background="@color/lvtopbg"
                                android:gravity="center_vertical|right"
                                android:text="登记人："
                                android:textColor="#4d4d4d"
                                android:textSize="16.5sp"></TextView>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#d4d4d4" />

                            <EditText
                                android:id="@+id/et_dialog_otherrelation_8"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="16"
                                android:background="@null"
                                android:enabled="false"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textColor="#4d4d4d"
                                android:textSize="16.5dp"></EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:background="@color/lvtopbg"
                                android:gravity="center_vertical|right"
                                android:text="登记机构："
                                android:textColor="#4d4d4d"
                                android:textSize="16.5sp"></TextView>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#d4d4d4" />

                            <EditText
                                android:id="@+id/et_dialog_otherrelation_9"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="16"
                                android:background="@null"
                                android:enabled="false"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textColor="#4d4d4d"
                                android:textSize="16.5dp"></EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:background="@color/lvtopbg"
                                android:gravity="center_vertical|right"
                                android:text="登记日期："
                                android:textColor="#4d4d4d"
                                android:textSize="16.5sp"></TextView>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#d4d4d4" />

                            <EditText
                                android:id="@+id/et_dialog_otherrelation_10"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="16"
                                android:background="@null"
                                android:enabled="false"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textColor="#4d4d4d"
                                android:textSize="16.5dp"></EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:background="@color/lvtopbg"
                                android:gravity="center_vertical|right"
                                android:text="更新日期："
                                android:textColor="#4d4d4d"
                                android:textSize="16.5sp"></TextView>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#d4d4d4" />

                            <EditText
                                android:id="@+id/et_dialog_otherrelation_11"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="16"
                                android:background="@null"
                                android:enabled="false"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textColor="#4d4d4d"
                                android:textSize="16.5dp"></EditText>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/dialogbusinessfri_btnYes"
                        android:layout_width="130dp"
                        android:layout_height="46dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/bookbuildingbtnbg"
                        android:text="保存"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <Button
                        android:id="@+id/dialogbusinessfri_btnNo"
                        android:layout_width="130dp"
                        android:layout_height="46dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/bookbuildingbtnbg"
                        android:text="取消"
                        android:textColor="@color/white"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="74"></LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>