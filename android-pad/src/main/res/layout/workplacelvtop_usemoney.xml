<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_workplaceitem"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/lvitem_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:text="客户姓名"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:id="@+id/line1"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/lvitem_info2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="贷款帐号"
        android:singleLine="true"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:id="@+id/line2"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/lvitem_info3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:text="贷款金额"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:id="@+id/line3"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/lvitem_info4"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="还款帐号"
        android:singleLine="true"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:id="@+id/line4"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <com.pactera.financialmanager.ui.commontool.TextViewMarquee
        android:id="@+id/lvitem_info5"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:text="还款账户余额"
        android:singleLine="true"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />
    
	<View
        android:id="@+id/line5"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <com.pactera.financialmanager.ui.commontool.TextViewMarquee
        android:id="@+id/lvitem_info6"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:text="本期应还本金"
        android:singleLine="true"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />
    
	<View
        android:id="@+id/line6"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <com.pactera.financialmanager.ui.commontool.TextViewMarquee
        android:id="@+id/lvitem_info7"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:text="本期应还利息"
        android:singleLine="true"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:id="@+id/line7"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/lvitem_info8"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:text="还款日"
        android:singleLine="true"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />
</LinearLayout>