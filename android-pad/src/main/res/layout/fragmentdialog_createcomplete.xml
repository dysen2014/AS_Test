<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bookbuildingdialogfragmentbg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/dialogtopbg" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="创建竞争对手关系"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="65" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="810"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bookbuildingbg"
                    android:divider="@drawable/gray_divider"
                    android:orientation="vertical"
                    android:paddingBottom="0.7dp"
                    android:paddingLeft="0.7dp"
                    android:paddingTop="0.7dp"
                    android:showDividers="middle" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:background="@color/lvtopbg"
                            android:gravity="center_vertical|right"
                            android:text="竞争对手名称："
                            android:textColor="#4d4d4d"
                            android:textSize="16.5sp" >
                        </TextView>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#d4d4d4" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="16"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/et_complete1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="4dp"
                                android:singleLine="true"
                                android:textColor="#4d4d4d"
                                android:textSize="16.5dp" >
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:background="@color/lvtopbg"
                            android:gravity="center_vertical|right"
                            android:text="关联客户号："
                            android:textColor="#4d4d4d"
                            android:textSize="16.5sp" >
                        </TextView>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#d4d4d4" />

                        <EditText
                            android:id="@+id/et_complete2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="16"
                            android:background="@null"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="4dp"
                            android:singleLine="true"
                            android:textColor="#4d4d4d"
                            android:textSize="16.5dp" >
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:background="@color/lvtopbg"
                            android:gravity="center_vertical|right"
                            android:text="竞争对手关系："
                            android:textColor="#4d4d4d"
                            android:textSize="16.5sp" >
                        </TextView>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#d4d4d4" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="16" >

                            <Spinner
                                android:id="@+id/spin_complete1"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="35dp"
                                android:background="@drawable/spinnerbg"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:background="@color/lvtopbg"
                            android:gravity="center_vertical|right"
                            android:text="竞争对手证件类型："
                            android:textColor="#4d4d4d"
                            android:textSize="15.5sp" >
                        </TextView>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#d4d4d4" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="16" >

                            <Spinner
                                android:id="@+id/spin_complete2"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="35dp"
                                android:background="@drawable/spinnerbg"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:background="@color/lvtopbg"
                            android:gravity="center_vertical|right"
                            android:text="竞争对手证件号码："
                            android:textColor="#4d4d4d"
                            android:textSize="15.5sp" >
                        </TextView>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#d4d4d4" />

                        <EditText
                            android:id="@+id/et_complete3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="16"
                            android:background="@null"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="4dp"
                            android:singleLine="true"
                            android:textColor="#4d4d4d"
                            android:textSize="16.5dp" >
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:background="@color/lvtopbg"
                            android:gravity="center_vertical|right"
                            android:text="结算方式："
                            android:textColor="#4d4d4d"
                            android:textSize="16.5sp" >
                        </TextView>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#d4d4d4" />
                        
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="16" >
                            
                        <Spinner
                            android:id="@+id/spin_complete3"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="35dp"
                            android:background="@drawable/spinnerbg"
                            android:textSize="16sp" />
                            
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:background="@color/lvtopbg"
                            android:gravity="center_vertical|right"
                            android:text="备注："
                            android:textColor="#4d4d4d"
                            android:textSize="16.5sp" >
                        </TextView>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#d4d4d4" />

                        <EditText
                            android:id="@+id/et_complete4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="16"
                            android:background="@null"
                            android:gravity="left"
                            android:paddingLeft="4dp"
                            android:textColor="#4d4d4d"
                            android:textSize="16.5dp" >
                        </EditText>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="center_horizontal|top"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/complete_btnYes"
                    android:layout_width="130dp"
                    android:layout_height="46dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/bookbuildingbtnbg"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/complete_btnNo"
                    android:layout_width="130dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bookbuildingbtnbg"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="74" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>