<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_workplace_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_fd_column1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:text="客户姓名"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/tv_fd_column2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="渠道"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/tv_fd_column3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="手机号码"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />


    <TextView
        android:id="@+id/tv_fd_column4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="预约日期"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />


    <TextView
        android:id="@+id/tv_fd_column5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="需求类型"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/tv_fd_column6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="处理状态"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp" />

    <View
        android:id="@+id/view_fd_column7"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_fd_column7"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="处理人"
        android:textColor="@color/workplacewordcolor"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>