<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_myscusitem"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/lvitem_info1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="核心客户号"
        android:textColor="@color/workplacewordcolor"
        android:textSize="17sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <TextView
        android:id="@+id/lvitem_info2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="客户姓名"
        android:textColor="@color/workplacewordcolor"
        android:textSize="17sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <com.pactera.financialmanager.ui.commontool.TextViewMarquee
        android:id="@+id/lvitem_info3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:text="证件号码"
        android:textColor="@color/workplacewordcolor"
        android:textSize="17sp" />

    <View
        android:id="@+id/view3"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <com.pactera.financialmanager.ui.commontool.TextViewMarquee
        android:id="@+id/lvitem_info4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:singleLine="true"
        android:text="证件类型"
        android:textColor="@color/workplacewordcolor"
        android:textSize="17sp" />

    <View
        android:id="@+id/view4"
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/separateline" />

    <com.pactera.financialmanager.ui.commontool.TextViewMarquee
        android:id="@+id/lvitem_info5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:text="联系电话"
        android:singleLine="true"
        android:textColor="@color/workplacewordcolor"
        android:textSize="17sp" />

   
</LinearLayout>