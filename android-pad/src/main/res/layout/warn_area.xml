<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    android:layout_margin="16dp">

    <com.yinglan.alphatabs.AlphaTabsIndicator
        android:id="@+id/alphaIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.yinglan.alphatabs.AlphaTabView
            android:id="@+id/tab_0"
            style="@style/common_tab_bar"
            app:tabIconNormal="@drawable/warn_tab_customerdefault"
            app:tabIconSelected="@drawable/warn_tab_customerdefault_selected"
            app:tabText="客户违约"
            app:tabTextSize="13sp"
            app:textColorNormal="#999999"
            app:textColorSelected="#ea452f"/>

        <com.yinglan.alphatabs.AlphaTabView
            android:id="@+id/tab_1"
            style="@style/common_tab_bar"
            app:tabIconNormal="@drawable/warn_tab_customertransaction"
            app:tabIconSelected="@drawable/warn_tab_customertransaction_selected"
            app:tabText="客户异动"
            app:tabTextSize="13sp"
            app:textColorNormal="#999999"
            app:textColorSelected="#ea452f"/>

        <com.yinglan.alphatabs.AlphaTabView
            android:id="@+id/tab_2"
            style="@style/common_tab_bar"
            app:tabIconNormal="@drawable/warn_tab_customercare"
            app:tabIconSelected="@drawable/warn_tab_customercare_selected"
            app:tabText="客户关怀"
            app:tabTextSize="13sp"
            app:textColorNormal="#999999"
            app:textColorSelected="#ea452f"/>

        <com.yinglan.alphatabs.AlphaTabView
            android:id="@+id/tab_3"
            style="@style/common_tab_bar"
            app:tabIconNormal="@drawable/warn_tab_financialneeds"
            app:tabIconSelected="@drawable/warn_tab_financialneeds_selected"
            app:tabText="金融需求"
            app:tabTextSize="13sp"
            app:textColorNormal="#999999"
            app:textColorSelected="#ea452f"/>

        <com.yinglan.alphatabs.AlphaTabView
            android:id="@+id/tab_4"
            style="@style/common_tab_bar"
            app:tabIconNormal="@drawable/warn_tab_productexpires"
            app:tabIconSelected="@drawable/warn_tab_productexpires_selected"
            app:tabText="产品到期"
            app:tabTextSize="13sp"
            app:textColorNormal="#999999"
            app:textColorSelected="#ea452f"/>

            <com.yinglan.alphatabs.AlphaTabView
                android:id="@+id/tab_5"
                style="@style/common_tab_bar"
                app:tabIconNormal="@drawable/warn_tab_overdue"
                app:tabIconSelected="@drawable/warn_tab_overdue_selected"
                app:tabText="贷款逾期"
                app:tabTextSize="13sp"
                app:textColorNormal="#999999"
                app:textColorSelected="#ea452f"
                android:clickable="false"/>

            <com.yinglan.alphatabs.AlphaTabView
                android:id="@+id/tab_6"
                style="@style/common_tab_bar"
                app:tabIconNormal="@drawable/warn_tab_expiration"
                app:tabIconSelected="@drawable/warn_tab_expiration_selected"
                app:tabText="贷款到期"
                app:tabTextSize="13sp"
                app:textColorNormal="#999999"
                app:textColorSelected="#ea452f"
                android:clickable="false"/>

            <com.yinglan.alphatabs.AlphaTabView
                android:id="@+id/tab_7"
                style="@style/common_tab_bar"
                app:tabIconNormal="@drawable/warn_tab_after"
                app:tabIconSelected="@drawable/warn_tab_after_selected"
                app:tabText="贷后管理"
                app:tabTextSize="13sp"
                app:textColorNormal="#999999"
                app:textColorSelected="#ea452f"
                android:clickable="false"/>

        <com.yinglan.alphatabs.AlphaTabView
            android:visibility="gone"
            android:id="@+id/tab_8"
            style="@style/common_tab_bar"
            app:tabIconNormal="@drawable/warn_tab_customertransaction"
            app:tabIconSelected="@drawable/warn_tab_customertransaction_selected"
            app:tabText="客户审批"
            app:tabTextSize="13sp"
            app:textColorNormal="#999999"
            app:textColorSelected="#ea452f"/>

        <com.yinglan.alphatabs.AlphaTabView
            android:visibility="gone"
            android:id="@+id/tab_9"
            style="@style/common_tab_bar"
            app:tabIconNormal="@drawable/warn_tab_customertransaction"
            app:tabIconSelected="@drawable/warn_tab_customertransaction_selected"
            app:tabText="余额不足"
            app:tabTextSize="13sp"
            app:textColorNormal="#999999"
            app:textColorSelected="#ea452f"/>
    </com.yinglan.alphatabs.AlphaTabsIndicator>
</LinearLayout>