<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/darkorange" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/wheel_view_ll1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.pactera.financialmanager.ui.WheelView
                android:id="@+id/wheel_view_wv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wheel_view_ll2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.pactera.financialmanager.ui.WheelView
                android:id="@+id/wheel_view_wv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wheel_view_ll3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.pactera.financialmanager.ui.WheelView
                android:id="@+id/wheel_view_wv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
          <LinearLayout
           android:id="@+id/wheel_view_ll4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.pactera.financialmanager.ui.WheelView
                android:id="@+id/wheel_view_wv4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
                  <LinearLayout
           android:id="@+id/wheel_view_ll5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.pactera.financialmanager.ui.WheelView
                android:id="@+id/wheel_view_wv5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
          
    </LinearLayout>

    <Button
        android:id="@+id/wheel_button"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bookbuildingbtnbg"
        android:text="确定"
        android:textColor="@color/white" />

</LinearLayout>