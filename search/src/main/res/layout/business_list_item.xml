<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center">
        <TextView
            android:id="@+id/picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@mipmap/u800"
            />
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/picture"
        android:layout_toRightOf="@+id/picture"
        android:stretchColumns="0,1">
        <TableRow>
            <TextView
                android:id="@+id/CustomerName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="@string/customerName"
                android:gravity="left"/>
            <TextView android:id="@+id/businessType"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow >
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/BusinessSum_left"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="贷款金额"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/BusinessSum"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_toEndOf="@+id/BusinessSum_left"
                        android:layout_toRightOf="@+id/BusinessSum_left"
                        android:gravity="left"/>

            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Balance_left"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="贷款余额"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/Balance"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_toEndOf="@+id/Balance_left"
                    android:layout_toRightOf="@+id/Balance_left"
                    android:gravity="left"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/OverDueBalance_left"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="逾期金额"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/OverDueBalance"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_toEndOf="@+id/OverDueBalance_left"
                    android:layout_toRightOf="@+id/OverDueBalance_left"
                    android:gravity="left"/>
            </LinearLayout>
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/InterestBalance_left"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="欠息金额"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/InterestBalance"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_toEndOf="@+id/InterestBalance_left"
                    android:layout_toRightOf="@+id/InterestBalance_left"
                    android:gravity="left"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>
