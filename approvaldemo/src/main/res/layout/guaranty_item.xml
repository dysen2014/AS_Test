<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/data_name"
        android:layout_height="32dp"
        android:layout_width="match_parent"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data_credit_num"
                style="@style/common_text"/>

            <TextView
                android:id="@+id/data_credit_num_value"
                style="@style/common_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data_guaranty_customser"
                style="@style/common_text"/>

            <TextView
                android:id="@+id/data_guaranty_customser_value"
                style="@style/common_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/data_guaranty_type"
                style="@style/common_text"/>

            <TextView
                android:id="@+id/data_guaranty_type_value"
                style="@style/common_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data_guaranty_style"
                style="@style/common_text"/>

            <TextView
                android:id="@+id/data_guaranty_style_value"
                style="@style/common_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data_guaranty_amount"
                style="@style/common_text"/>

            <TextView
                android:id="@+id/data_guaranty_amount_value"
                style="@style/common_text"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>